#!/bin/sh
##################################################
# push all changes from local branch
# to remote site on GITHUB
##################################################
# ! CAUTION ! CAUTION ! CAUTION !
#
# ensure that .git/info/exclude file contains:
# .gitconfig
#
# Elsewhere the user-credencials 
# will be pushed on github!
# Save user credencials in /root/.gitconfig !
VER=v3.1
echo "*"
echo "push changes to remote  GITHUB Site..."
echo "*"
git add --all
git commit -m "commit0"
git tag $VER
git push origin master
echo "*"
echo "push complete."
echo "*"
